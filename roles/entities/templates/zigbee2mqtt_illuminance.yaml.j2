sensor:
  - platform: "mqtt"
    name: "{{ data.entity_id }}_battery"
    state_topic: "zigbee2mqtt/{{ data.entity_id }}"
    availability_topic: "zigbee2mqtt/{{ data.entity_id }}/availability"
    unit_of_measurement: "%"
    value_template: "{{ '{{' }} value_json.battery {{ '}}' }}"
    device_class: "battery"

  - platform: "mqtt"
    name: "{{ data.entity_id }}_illuminance"
    state_topic: "zigbee2mqtt/{{ data.entity_id }}"
    availability_topic: "zigbee2mqtt/{{ data.entity_id }}/availability"
    unit_of_measurement: "-"
    value_template: "{{ '{{' }} value_json.illuminance {{ '}}' }}"
    device_class: "illuminance"

  - platform: "mqtt"
    name: "{{ data.entity_id }}_illuminance_lux"
    state_topic: "zigbee2mqtt/{{ data.entity_id }}"
    availability_topic: "zigbee2mqtt/{{ data.entity_id }}/availability"
    unit_of_measurement: "lx"
    value_template: "{{ '{{' }} value_json.illuminance_lux {{ '}}' }}"
    device_class: "illuminance"

  - platform: "mqtt"
    name: "{{ data.entity_id }}_linkquality"
    state_topic: "zigbee2mqtt/{{ data.entity_id }}"
    availability_topic: "zigbee2mqtt/{{ data.entity_id }}/availability"
    unit_of_measurement: "lqi"
    value_template: "{{ '{{' }} value_json.linkquality {{ '}}' }}"
    icon: "mdi:signal"
